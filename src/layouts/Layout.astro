---
interface Props {
  title: string;
}

const { title } = Astro.props;
import Footer from "./Footer.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <link rel="stylesheet" href="global.css" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  @layer base {
    p {
      @apply text-base font-extrabold leading-9 tracking-tight text-gray-900 dark:text-gray-100 sm:text-2xl sm:leading-10 md:text-2xl md:leading-normal lg:text-base lg:leading-normal;
    }

    h1 {
      @apply text-3xl font-extrabold leading-9 tracking-tight text-gray-900 dark:text-gray-100 sm:text-4xl sm:leading-10 md:text-5xl md:leading-normal lg:text-3xl;
    }
  }

  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    font-family: system-ui, sans-serif;
    background: #13151a;
    scroll-behavior: smooth;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  section {
    width: 100%;
    height: 100vh;

    margin-left: auto;
    margin-right: auto;

    display: flex;
    align-items: stretch;
    justify-content: center;

    background-image: linear-gradient(
      to bottom,
      black,
      rgba(42, 75, 124, 0.574) 50%,
      black
    );
  }

  main {
    max-width: 1366px;
    min-width: 320px;
    
    margin-left: auto;
    margin-right: auto;
  }

  @media (min-width: 768px) {
    section {
      flex-direction: column;
    }
  }

  /* @media (min-width: 640px) {
    section {
      max-width: 640px;
    }
  }
  @media (min-width: 768px) {
    section {
      max-width: 768px;
    }
  } */
</style>
