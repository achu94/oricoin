---
import { Image } from "astro:assets";
import prjectImg from "../assets/img-project.png";
import Stars from "../components/Stars.astro";
import lockIcon from "../assets/lock.svg";
---

<section id="project" class="flex flex-col justify-center items-start p-10">
  <Stars />
  <Image
    class="animate-bounce-slow"
    src={prjectImg}
    alt="bori prject image"
    width={150}
  />
  <div class="flex flex-col gap-5">
    <div>
      <h1>Project Bori</h1>
      <p>
        Hi, I'm BORI from Andromeda and I'm here to smash all the MÐµme-Coins on
        the planet. Together with you, we will conquer the world and take over
        all markets. I will become the greatest Meme-Coin on the planet.
      </p>
    </div>
    <div class="flex flex-col gap-5 md:flex-row justify-center">
      <ul class="dark:text-gray-100 border p-2 bg-gray-500 md:flex-1">
        <li class="text-3xl flex justify-center">100.000.000.000</li>
        <li class="text-1xl flex justify-center">Total supply</li>
      </ul>
      <ul class="dark:text-gray-100 border p-2 bg-gray-500 md:flex-1">
        <li class="text-3xl flex justify-center">0 %</li>
        <li class="text-1xl flex justify-center">Tax</li>
      </ul>
      <ul class="dark:text-gray-100 border p-2 bg-gray-500 md:flex-1">
        <li class="text-3xl flex justify-center">
          <Image class="" src={lockIcon} alt="liquidity icon" width={50} />
        </li>
        <li class="text-1xl flex justify-center">Liquidity</li>
      </ul>
    </div>
  </div>
</section>
