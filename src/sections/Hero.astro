---
import { Image } from "astro:assets";
import heroImg from "../assets/img-hero.png";
import Stars from "../components/Stars.astro";
---

<section>
  <Stars />
  <div
    class="lg:flex-grow mt-5 md:mt-0 md:w-1.5/2 lg:pr-24 md:pr-16 flex flex-col md:items-start md:text-left mb-16 md:mb-0 items-center text-center gap-10"
  >
    <div
      class="lg:max-w-lg lg:w-full mb-5 md:mb-0 md:w-1/2 w-3/6 animate-pulse"
    >
      <Image src={heroImg} alt="hero" />
    </div>
    <h1
      class="text-6xl font-extrabold leading-9 tracking-tight mb-3 text-gray-900 dark:text-gray-100 sm:text-4xl sm:leading-10 md:text-5xl md:leading-normal"
    >
      Bori
    </h1>
    <h1
      class="text-3xl font-extrabold leading-9 tracking-tight mb-3 text-gray-900 dark:text-gray-100 sm:text-4xl sm:leading-10 md:text-5xl md:leading-normal"
    >
      Your Cosmic Companion!
    </h1>
    <div class="container">
      <a
        href="#project"
        class="ml-4 inline-flex text-gray-700 bg-gray-100 border-0 py-2 px-6 focus:outline-none hover:bg-gray-200 rounded text-lg"
        >Project</a
      >
    </div>
  </div>
</section>
